# =============================================================================
# Asset Management Portal - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the actual values
# Never commit .env.local to version control

# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_NAME="Asset Management Portal"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NEXT_PUBLIC_APP_URL="http://localhost:8000"

# API Configuration
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_API_VERSION="v1"

# Authentication Configuration
# =============================================================================
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:8000"

# Google OAuth Configuration
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Database Configuration (if applicable)
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/asset_management"
DATABASE_SHADOW_URL="postgresql://username:password@localhost:5432/asset_management_shadow"

# Redis Configuration (for caching/sessions)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# File Storage Configuration
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-southeast-1"
AWS_S3_BUCKET_NAME="asset-management-files"

# Or use local file storage
FILE_STORAGE_TYPE="local" # local | s3
LOCAL_UPLOAD_DIR="./uploads"

# Email Configuration
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-email-password"
EMAIL_FROM="noreply@yourcompany.com"

# Monitoring & Analytics
# =============================================================================
# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Feature Flags
# =============================================================================
NEXT_PUBLIC_ENABLE_PWA="false"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="false"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Development & Debug
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"
LOG_LEVEL="info" # error | warn | info | debug

# Security Configuration
# =============================================================================
# JWT Configuration
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:8000"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15" # minutes

# Third-party Services
# =============================================================================
# QR Code Scanner Service
QR_SCANNER_API_KEY="your-qr-scanner-api-key"

# Asset Tracking Service
ASSET_TRACKING_API_URL="https://api.assettracking.com"
ASSET_TRACKING_API_KEY="your-tracking-api-key"

# Notification Services
# =============================================================================
# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# WhatsApp/SMS Notifications
WHATSAPP_API_TOKEN="your-whatsapp-api-token"
SMS_API_KEY="your-sms-api-key"

# Performance & Optimization
# =============================================================================
# CDN Configuration
NEXT_PUBLIC_CDN_URL="https://cdn.yourcompany.com"

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS="localhost,yourcompany.com,cdn.yourcompany.com"

# Cache Configuration
CACHE_TTL="3600" # seconds
CACHE_ENABLED="true"